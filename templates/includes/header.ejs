<div class="site-header flex justify-center">
  <a href="<%= themeConfig.domain %>" class="grid">
  <img class="avatar" src="<%= themeConfig.domain %>/images/avatar.png?v=<%= site.utils.now %>" alt="" >
  </a>
  <div class="bg-home-pattern">
    <h1 class="site-title">
      <%= themeConfig.siteName %>
    </h1>
    <p class="site-description">
      <%- themeConfig.siteDescription %>
    </p>
  </div>

  <div class="menu-container rounded-full py-3 px-6 ">
    <% menus.forEach(function(menu) { %>
      <% if (menu.openType === 'External') { %>
        <a href="<%= menu.link %>" class="menu delay-300"  target="_blank">
          <%= menu.name %>
        </a>
      <% } else { %>
        <a href="<%= menu.link %>" class="menu delay-300">
          <%= menu.name %>
        </a>
      <% } %>
    <% }); %>
  </div>
  <div class="social-container">
    <% ['github', 'twitter', 'weibo', 'zhihu', 'facebook'].forEach((item) => { %>
      <% if (site.customConfig[item]) { %>
        <a href="<%= site.customConfig[item] %>" target="_blank">
          <i class="ri-<%= item %>-line"></i>
        </a>
      <% } %>
    <% }) %>
  </div>
</div>
